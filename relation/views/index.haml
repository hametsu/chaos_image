- # -*- coding: utf-8 -*-
%form{:method => "POST", :action => '/new'}
  %input{:type => "hidden", :name => "_method", :value => "PUT"}
  %table
    %tr
      %td from
      %td 
        %input{:type => "text", :name => "from"}
    %tr
      %td to
      %td
        %input{:type => "text", :name => "to"}
    %tr
      %td label
      %td
        %input{:type => "text", :name => "label"}
    %tr
      %td
      %td
        %input{:type => "submit"}

%form{:method => 'POST', :action => '/delete'}
  %input{:type => "hidden", :name => "_method", :value => "PUT"}
  %input{:type => 'submit', :value => '消す'}
  %br
  - @relations.each do |r|
    %input{:type => 'checkbox', :name => "relation[]", :value => r.id}
    = r.to_s
    %br

- @png = Relations.to_png
%a{:href => url = Graphs.gyazo(@png)}
  = url
%br
- require 'base64'
%img{'src' => 'data:image/png;base64,' + Base64.encode64(@png)}
%br
%a{:href => 'http://github.com/takano32/chaos_image/tree/master/relation'}
